<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/dialog_view" android:background="@color/dialog_background" android:paddingTop="@dimen/applink_dialog_padding_top" android:paddingBottom="@dimen/applink_dialog_padding_bottom" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/applink_dialog_padding_start" android:paddingEnd="@dimen/applink_dialog_padding_end">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/applink_dialog_content_margin_bottom" android:minHeight="@dimen/applink_dialog_content_min_height">
        <RelativeLayout android:layout_gravity="start" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:id="@+id/app_icon" android:layout_width="@dimen/applink_dialog_app_icon_width" android:layout_height="@dimen/applink_dialog_app_icon_height" android:layout_marginBottom="@dimen/applink_dialog_icon_margin_bottom" android:layout_marginEnd="@dimen/applink_dialog_icon_margin_end" android:layout_alignParentStart="true"/>
            <TextView android:textSize="@dimen/applink_dialog_title_text_size" android:textColor="@color/reference_white_100" android:ellipsize="end" android:id="@+id/app_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/applink_dialog_title_margin_top" android:layout_marginBottom="@dimen/applink_dialog_title_margin_bottom" android:maxLines="1" android:includeFontPadding="false" android:fontFamily="sans-serif-light" android:layout_toEndOf="@+id/app_icon"/>
            <TextView android:textSize="@dimen/text_size_h4" android:textColor="@color/reference_white_100" android:ellipsize="end" android:id="@+id/app_developer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false" android:layout_below="@+id/app_title" android:layout_toEndOf="@+id/app_icon"/>
            <TextView android:textSize="@dimen/text_size_h3" android:textColor="@color/reference_white_70" android:ellipsize="end" android:id="@+id/app_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/applink_dialog_description_margin_bottom" android:maxLines="4" android:layout_below="@+id/app_icon" android:layout_alignParentStart="true"/>
            <TextView android:textSize="@dimen/text_size_h4" android:textColor="@color/reference_white_70" android:id="@+id/app_category" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/app_description" android:layout_alignParentStart="true"/>
        </RelativeLayout>
        <ImageView android:id="@+id/app_screenshot" android:visibility="gone" android:layout_width="@dimen/applink_dialog_screenshot_width" android:layout_height="@dimen/applink_dialog_screenshot_height" android:scaleType="centerInside" android:layout_weight="0" android:layout_marginStart="@dimen/applink_dialog_screenshot_margin_start"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/open_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/open" style="@style/ConfirmationDialog.ApplinkActionItem"/>
        <Button android:id="@+id/allow_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/add" style="@style/ConfirmationDialog.ApplinkActionItem"/>
        <Button android:id="@+id/deny_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cancel" style="@style/ConfirmationDialog.ApplinkActionItem"/>
    </LinearLayout>
</LinearLayout>
