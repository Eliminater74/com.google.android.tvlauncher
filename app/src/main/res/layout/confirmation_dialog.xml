<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dialog_background"
    android:paddingStart="@dimen/dialog_padding_start"
    android:paddingTop="@dimen/dialog_padding_top"
    android:paddingEnd="@dimen/dialog_padding_end"
    android:paddingBottom="@dimen/dialog_padding_bottom"
    android:visibility="gone">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/dialog_app_icon_width"
        android:layout_height="@dimen/dialog_app_icon_height"
        android:layout_marginTop="@dimen/dialog_app_icon_margin_top" />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dialog_content_margin_start"
        android:layout_marginTop="@dimen/dialog_content_margin_top"
        android:layout_marginEnd="@dimen/dialog_content_margin_end"
        android:layout_weight="1"
        android:ellipsize="end"
        android:importantForAccessibility="yes"
        android:maxLines="4"
        android:textAppearance="@style/ConfirmationDialog.TitleText" />

    <LinearLayout
        android:layout_width="@dimen/dialog_actions_width"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/allow_button"
            style="@style/ConfirmationDialog.ActionItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/deny_button"
            style="@style/ConfirmationDialog.ActionItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel" />
    </LinearLayout>
</LinearLayout>
