<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/lb_preference_item_padding_start"
    android:paddingTop="@dimen/preference_category_padding_top"
    android:paddingEnd="@dimen/lb_preference_item_padding_end"
    android:paddingBottom="@dimen/preference_category_padding_bottom">

    <TextView
        android:id="@android:id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/preference_category_title_margin_bottom"
        android:duplicateParentState="true"
        android:textAppearance="?android:attr/textAppearanceListItemSmall" />

    <TextView
        android:id="@android:id/summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:textAppearance="?android:attr/textAppearanceListItemSecondary" />
</LinearLayout>
