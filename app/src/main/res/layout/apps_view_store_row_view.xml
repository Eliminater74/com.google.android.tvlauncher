<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/store_row_view_margin_bottom"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal"
    android:paddingStart="@dimen/app_view_padding_start"
    android:paddingEnd="@dimen/overscan_horizontal">

    <include
        android:id="@+id/app_store"
        layout="@layout/store_button_view"
        android:layout_width="@dimen/store_button_width"
        android:layout_height="@dimen/store_button_height"
        android:layout_marginEnd="@dimen/store_button_margin_end" />

    <include
        android:id="@+id/game_store"
        layout="@layout/store_button_view" />
</LinearLayout>
