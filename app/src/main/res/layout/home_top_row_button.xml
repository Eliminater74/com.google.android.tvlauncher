<?xml version="1.0" encoding="utf-8"?>
<com.google.android.tvlauncher.home.HomeTopRowButton xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/top_row_item_size"
    android:layout_height="@dimen/top_row_item_size"
    android:layout_gravity="center"
    android:layout_marginEnd="@dimen/top_row_item_spacing"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/top_row_item_size"
        android:layout_height="@dimen/top_row_item_size"
        android:layout_marginBottom="@dimen/top_row_button_margin_bottom">

        <View
            android:id="@+id/button_background"
            android:layout_width="@dimen/top_row_item_size"
            android:layout_height="@dimen/top_row_item_size"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/button_icon"
            android:layout_width="@dimen/top_row_button_icon_size"
            android:layout_height="@dimen/top_row_button_icon_size"
            android:layout_gravity="center"
            android:tint="@color/reference_white_60"
            android:tintMode="src_in" />
    </FrameLayout>

    <include layout="@layout/home_top_row_button_title" />
</com.google.android.tvlauncher.home.HomeTopRowButton>
