<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/context_menu_height_per_row"
    android:background="@color/context_menu_background_unfocused_color"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/context_menu_item_icon_size"
        android:layout_height="@dimen/context_menu_item_icon_size"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/context_menu_item_icon_margin_start"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/context_menu_item_text_margin_start"
        android:ellipsize="end"
        android:maxWidth="@dimen/context_menu_item_text_max_width"
        android:maxLines="1"
        android:minWidth="@dimen/context_menu_item_text_min_width"
        android:paddingEnd="@dimen/context_menu_item_text_padding_end"
        android:textColor="@color/context_menu_text_enabled_color"
        android:textSize="@dimen/context_menu_item_text_size" />
</LinearLayout>
