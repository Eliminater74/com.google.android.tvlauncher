<?xml version="1.0" encoding="utf-8"?>
<com.google.android.tvlauncher.notifications.NotificationsTrayItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/notification_tray_item_width"
    android:layout_height="@dimen/notification_tray_height"
    android:layout_marginEnd="@dimen/notification_tray_item_margin_end"
    android:background="@drawable/notification_tray_item_background"
    android:gravity="left|center_vertical|center_horizontal|center|start"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/small_icon"
        android:layout_width="@dimen/notification_tray_icon_size"
        android:layout_height="@dimen/notification_tray_icon_size"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/notification_tray_icon_margin_start"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/big_picture"
            android:layout_width="@dimen/notification_tray_big_picture_size"
            android:layout_height="@dimen/notification_tray_big_picture_size"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/now_playing_bars"
            android:layout_width="@dimen/notification_tray_indicator_circle_size"
            android:layout_height="@dimen/notification_tray_indicator_circle_size"
            android:layout_gravity="center"
            android:background="@drawable/now_playing_circle_background"
            android:visibility="gone">

            <com.google.android.tvlauncher.util.NowPlayingIndicatorView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/notification_tray_indicator_padding"
                app:bar_separation="@dimen/notification_now_playing_bar_separation"
                app:bar_width="@dimen/notification_now_playing_bar_width" />
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/notification_tray_text_margin_start"
        android:layout_marginEnd="@dimen/notification_tray_text_margin_end"
        android:layout_weight="1"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notif_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fontFamily="@font/google_sans_medium"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="@dimen/notification_tray_text_max_width"
            android:minWidth="@dimen/notification_tray_text_min_width"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textColor="@color/notification_tray_primary_text_color"
            android:textSize="@dimen/notification_tray_title_text_size" />

        <TextView
            android:id="@+id/notif_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fontFamily="@font/google_sans"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="@dimen/notification_tray_text_max_width"
            android:minWidth="@dimen/notification_tray_text_min_width"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textColor="@color/notification_tray_secondary_text_color"
            android:textSize="@dimen/notification_tray_text_text_size" />
    </LinearLayout>

    <com.google.android.tvlauncher.notifications.NotificationTrayButton
        android:id="@+id/tray_see_more"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/notification_tray_button_height"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/notification_tray_button_separation"
        android:background="@drawable/notification_button_background"
        android:fontFamily="@font/google_sans_medium"
        android:minWidth="@dimen/notification_tray_button_min_width"
        android:paddingStart="@dimen/notification_tray_button_padding_start"
        android:paddingEnd="@dimen/notification_tray_button_padding_end"
        android:textAllCaps="false"
        android:textColor="@drawable/notification_button_text_color" />

    <com.google.android.tvlauncher.notifications.NotificationTrayButton
        android:id="@+id/tray_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/notification_tray_button_height"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/notification_tray_button_margin_end"
        android:background="@drawable/notification_button_background"
        android:fontFamily="@font/google_sans_medium"
        android:minWidth="@dimen/notification_tray_button_min_width"
        android:paddingStart="@dimen/notification_tray_button_padding_start"
        android:paddingEnd="@dimen/notification_tray_button_padding_end"
        android:textAllCaps="false"
        android:textColor="@drawable/notification_button_text_color" />
</com.google.android.tvlauncher.notifications.NotificationsTrayItemView>
